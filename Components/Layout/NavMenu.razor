@using Microsoft.AspNetCore.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Konfucjusz</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Organizing Section (Organizers/Admins only) -->
        <AuthorizeView Roles="Administrator,Organizer">
            <Authorized>
                <div class="nav-item px-3">
                    <a class="nav-link" @onclick="ToggleOrganizing" style="cursor: pointer;">
                        <span class="bi @(organizingExpanded ? "bi-chevron-down" : "bi-chevron-right")" aria-hidden="true"></span>
                        ðŸ“‹ Organizing
                    </a>
                    @if (organizingExpanded)
                    {
                        <div class="nav-submenu ps-4">
                            <NavLink class="nav-link" href="organizing/future">
                                <span class="bi bi-calendar-plus" aria-hidden="true"></span> Future Events
                            </NavLink>
                            <NavLink class="nav-link" href="organizing/past">
                                <span class="bi bi-calendar-check" aria-hidden="true"></span> Past Events
                            </NavLink>
                        </div>
                    }
                </div>
            </Authorized>
        </AuthorizeView>

        <!-- Participating Section (All authenticated users) -->
        <AuthorizeView Roles="User,Administrator,Organizer">
            <Authorized>
                <div class="nav-item px-3">
                    <a class="nav-link" @onclick="ToggleParticipating" style="cursor: pointer;">
                        <span class="bi @(participatingExpanded ? "bi-chevron-down" : "bi-chevron-right")" aria-hidden="true"></span>
                        ðŸŽ« Participating
                    </a>
                    @if (participatingExpanded)
                    {
                        <div class="nav-submenu ps-4">
                            <NavLink class="nav-link" href="participating/future">
                                <span class="bi bi-calendar-event" aria-hidden="true"></span> Future Events
                            </NavLink>
                            <NavLink class="nav-link" href="participating/past">
                                <span class="bi bi-archive" aria-hidden="true"></span> Past Events
                            </NavLink>
                        </div>
                    }
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrator">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="userMenegment">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> User Menegment
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrator">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="eventManagement">
                        <span class="bi bi-calendar-event" aria-hidden="true"></span> Event Management
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Administrator,User,Organizer">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="user-self">
                        <span class="bi bi-key-fill" aria-hidden="true"></span> My Account
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool organizingExpanded = false;
    private bool participatingExpanded = false;

    private void ToggleOrganizing()
    {
        organizingExpanded = !organizingExpanded;
    }

    private void ToggleParticipating()
    {
        participatingExpanded = !participatingExpanded;
    }
}

