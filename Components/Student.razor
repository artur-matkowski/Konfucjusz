@page "/postgresqldatabase"
@rendermode InteractiveServer
@inherits OwningComponentBase<StudentService>


<h3> Student </h3>



<table border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>eMail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in sc)
        {
            <tr>
                <td>@item.stid</td>
                <td>@item.stname</td>
                <td>@item.email</td>
            </tr>
        }
    </tbody>
</table>


<button class="btn btn-primary" @onclick="AddNewStudent">Add noname student</button>

@code{
    public System.Collections.Generic.IList<StudentClass> sc = default!;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        sc = Service.GetStudents();
        Console.WriteLine("DPAAAAAAAAAAAAAAAAAAAAddingStudent");
    }

    private void AddNewStudent()
    {
        Console.WriteLine("AddingStudent");
        try {
            Service.AddStudent(new StudentClass { stid=45, stname="noname", email="xxx@ggg.com" });
            sc = Service.GetStudents();
        } catch (Exception ex) {
            Console.WriteLine(ex); // or render ex.Message in the page
        }
    }
}