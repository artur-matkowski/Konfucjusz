@page "/forgot-password"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@inject ApplicationDbContext Db
@inject EmailRequest Mailer
@inject NavigationManager Nav

<div class="row">
    <div class="col-lg-5 offset-lg-3 pt-4 pb-4 border">
        <form @onsubmit="HandleSubmit">
            <h3>Forgot password</h3>

            @if (!string.IsNullOrEmpty(StatusMessage))
            {
                <div class="alert @StatusCss" role="alert">@StatusMessage</div>
            }

            <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" @bind="Model.Email" placeholder="email@example.com" required />
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary" type="submit">Send reset link</button>
            </div>
        </form>
    </div>
</div>

@code {
    public class ForgotModel
    {
        [Required]
        [EmailAddress]
        public string? Email { get; set; }
    }

    private ForgotModel Model { get; set; } = new();
    private string? StatusMessage { get; set; }
    private string StatusCss { get; set; } = "alert-info";

    private async Task HandleSubmit()
    {
        try
        {
            var email = Model.Email?.Trim();
            if (string.IsNullOrEmpty(email))
            {
                StatusMessage = "Please provide a valid email address.";
                StatusCss = "alert-danger";
                return;
            }

            var user = Db.users.FirstOrDefault(u => u.userEmail == email);
            // Always show generic success to avoid account enumeration
            StatusMessage = "If an account with this email exists, a reset link has been sent.";
            StatusCss = "alert-success";

            if (user is not null)
            {
                var token = user.GeneratePasswordResetToken(TimeSpan.FromHours(1));
                var baseUri = Nav.BaseUri?.TrimEnd('/') ?? string.Empty;
                var link = $"{baseUri}/reset-password?token={token}";

                Mailer.To = email;
                Mailer.Subject = "Password reset";
                Mailer.Body = $@"<p>Hello,</p>
<p>We received a request to reset your password. Click the link below to set a new password. This link expires in 1 hour.</p>
<p><a href='{link}'>{link}</a></p>
<p>If you did not request this, you can safely ignore this email.</p>";
                Mailer.SendEmail();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
            StatusMessage = "Unable to send reset link at this time.";
            StatusCss = "alert-danger";
        }
    }
}
