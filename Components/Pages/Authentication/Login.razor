@page "/login"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@inject ApplicationDbContext dbContext
@inject NavigationManager navigationManager

<div class="row">
    <div class="col-lg-4 offset-lg-4 pt-4 pb-4 border">
        <EditForm Model="@Model" OnValidSubmit="Authenticate" FormName="LoginForm">
            <DataAnnotationsValidator />
            <div class="mb-3 text-denter flex-column">
                <h3>Login</h3>
            </div>
            <div class="mb-3">
                <label>User Name</label>
                <InputText @bind-Value="Model.UserName" class="form-control" placeholder="eMail" />
                <ValidationMessage For="() => Model.UserName" />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <InputText @bind-Value="Model.Password" class="form-control" type="password" placeholder="Password" />
                <ValidationMessage For="() => Model.Password" />
            </div>
            <div class="mb-3 text-center">
                <span class="text-danger"></span>
            </div>
            <div class="mb-3 d-grid gap-2">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </EditForm>
        <!-- Register button moved inside card and changed to a normal link to ensure navigation works reliably -->
        <div class="mb-3 d-grid gap-2">
            <a class="btn btn-outline-primary" href="/register">Register</a>
        </div>
    </div>
</div>

@code{

    public class LoginViewModel
    {
        [Required(AllowEmptyStrings = false, ErrorMessage = "Podaj nazwę użytkownika")]
        public string? UserName { get; set; }

        [Required(AllowEmptyStrings = false, ErrorMessage = "Podaj hasło")]
        public string? Password { get; set; }
    }

    [CascadingParameter]
    public HttpContext HttpContext{ get; set; } = default!;


    [SupplyParameterFromForm]    
    public LoginViewModel Model {get; set;} = new();


    private async Task Authenticate()
    {
        Console.WriteLine("Authenticate called");
        if (string.IsNullOrWhiteSpace(Model?.UserName))
        {
            // handle empty input
            return;
        }

        UserAccount? userAccount = dbContext?.users?.Where( x => x.userName == Model.UserName).FirstOrDefault();

        if (userAccount is null)
        {
            return;
        }

        // verify hashed password
        var hasher = new PasswordHasher<UserAccount>();
        var hashed = userAccount.userPassword ?? string.Empty;
        var provided = Model.Password ?? string.Empty;
        var verification = hasher.VerifyHashedPassword(userAccount, hashed, provided);
        if (verification == PasswordVerificationResult.Failed)
        {
            return;
        }

        Console.WriteLine($"----Logging in as {Model.UserName}, with roles {userAccount.userRole}");

        var claims = new List<Claim>
        {
            new Claim(ClaimTypes.Name, Model.UserName),
        };

        // userAccount.userRole may contain multiple roles separated by commas. Split and add each as a separate claim.
        if (!string.IsNullOrWhiteSpace(userAccount.userRole))
        {
            var roles = userAccount.userRole.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);
            foreach (var r in roles)
            {
                claims.Add(new Claim(ClaimTypes.Role, r));
            }
        }

        var identity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
        var principal = new ClaimsPrincipal(identity);

        await HttpContext.SignInAsync(principal);

        navigationManager.NavigateTo("/");
    }
}