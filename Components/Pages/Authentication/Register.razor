@page "/register"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using MailKit.Net.Smtp
@using MimeKit
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@inject ApplicationDbContext dbContext
@inject Microsoft.AspNetCore.DataProtection.IDataProtectionProvider DataProtectionProvider
@inject NavigationManager navigationManager
@inject EmailRequest emailService
@using System.Net
@using System.Text
@using Microsoft.EntityFrameworkCore

<div class="row">
    <div class="col-lg-4 offset-lg-4 pt-4 pb-4 border">
        <EditForm Model="@Model" OnValidSubmit="RegisterUser" FormName="RegisterForm">
            <DataAnnotationsValidator />
            @if (RegsitrationFormCorrect)
            {
                <div class="alert alert-success" role="alert">
                    <strong>Jeszcze momencik</strong> musimy pomyśleć.
                </div>

                @* If the verification email produced a status message, show it below the success box.
                   If it indicates failure, show as an error; otherwise as info. *@
                @if (!string.IsNullOrWhiteSpace(VerificationEmailStatus))
                {
                    if (VerificationEmailStatus?.Contains("could not", StringComparison.OrdinalIgnoreCase) == true
                        || VerificationEmailStatus?.Contains("failed", StringComparison.OrdinalIgnoreCase) == true)
                    {
                        <div class="alert alert-danger mt-2" role="alert">@VerificationEmailStatus</div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-2" role="alert">@VerificationEmailStatus</div>
                    }
                }
            }

            @* Show any other error (captcha, db etc.) as an alert when registration not successful *@
            @if (!string.IsNullOrWhiteSpace(ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Error:</strong> @ErrorMessage
                </div>
            }
            <div class="mb-3 text-denter flex-column">
                <h3>Register</h3>
            </div>
            <div class="mb-3">
                <label>Imię</label>
                <InputText @bind-Value="Model.UserName" class="form-control" placeholder="Username" />
                <ValidationMessage For="() => Model.UserName" />
            </div>
            <div class="mb-3">
                <label>Nazwisko</label>
                <InputText @bind-Value="Model.SurName" class="form-control" placeholder="Surname" />
                <ValidationMessage For="() => Model.SurName" />
            </div>
            <div class="mb-3">
                <label>Password</label>
                <InputText @bind-Value="Model.Password" class="form-control" type="password" placeholder="Password" />
                <ValidationMessage For="() => Model.Password" />
            </div>
            <div class="mb-3">
                <label>Repeat password</label>
                <InputText @bind-Value="Model.Password2" class="form-control" type="password" placeholder="Password" />
                <ValidationMessage For="() => Model.Password2" />
            </div>
            <div class="mb-3">
                <label>eMail</label>
                <InputText @bind-Value="Model.eMail" class="form-control" type="email" placeholder="Email" />
                <ValidationMessage For="() => Model.eMail" />
            </div>
            <div class="mb-3">
                <label>Captcha: solve the math</label>
                <div class="d-flex gap-2 align-items-center">
                    <span class="fs-5">@CaptchaA + @CaptchaB =</span>
                    <InputText @bind-Value="Model.CaptchaAnswer" class="form-control" style="max-width:120px;" />
                </div>
                <ValidationMessage For="() => Model.CaptchaAnswer" />
            </div>
            <div class="mb-3 d-grid gap-2">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
        </EditForm>
    </div>
</div>

@code{

    public class LoginViewModel
    {
        [Required(AllowEmptyStrings = false, ErrorMessage = "Podaj Imię")]
        public string? UserName { get; set; }
        
        [Required(AllowEmptyStrings = false, ErrorMessage = "Podaj Nazwisko")]
        public string? SurName { get; set; }

        [Required(AllowEmptyStrings = false, ErrorMessage = "Podaj hasło")]
        public string? Password { get; set; }

        [Required(AllowEmptyStrings = false, ErrorMessage = "Powtórz hasło")]
        public string? Password2 { get; set; }

        [Required(AllowEmptyStrings = false, ErrorMessage = "Podaj eMail")]
        public string? eMail { get; set; }

        public string? CaptchaAnswer { get; set; }
    }
    // simple math captcha fields
    private int CaptchaA { get; set; }
    private int CaptchaB { get; set; }

    private void GenerateCaptcha()
    {
        var rnd = new Random();
        CaptchaA = rnd.Next(1, 10);
        CaptchaB = rnd.Next(1, 10);
    }

    protected override void OnInitialized()
    {
        // keep OnInitialized lightweight; defer interactive-only work to OnAfterRenderAsync
        Console.WriteLine("OnInitialized called");
        GenerateCaptcha();
    }



    [CascadingParameter]
    public HttpContext HttpContext{ get; set; } = default!;


    [SupplyParameterFromForm]    
    public LoginViewModel Model {get; set;} = new();

    private string? ErrorMessage { get; set; }

    private bool RegsitrationFormCorrect { get; set; } = false;
    private bool MailSendedCorrectly { get; set; } = false;
    private string? VerificationEmailStatus { get; set; }


    private async Task RegisterUser()
    {
        // Show the "working" popup immediately
        RegsitrationFormCorrect = true;
        await InvokeAsync(StateHasChanged);

        // Start registration work asynchronously (fire-and-forget) so the UI stays responsive.
        // PerformRegistration is fully async (uses EF Core async APIs) and will update UI when done.
        _ = PerformRegistration();
    }

    private async Task PerformRegistration()
    {
        try
        {

            if (Model is null)
            {
                Console.WriteLine("Model is null");
                return;
            }


            var user = await dbContext.users.Where(u => (u.userEmail == Model.eMail)).FirstOrDefaultAsync();
            if (user is not null)
            {
                ErrorMessage = "Urzytkownik z takim adresem email już istnieje";
                return;
            }

            // captcha validation: ensure the user entered the correct sum
            if (string.IsNullOrWhiteSpace(Model.CaptchaAnswer) || !int.TryParse(Model.CaptchaAnswer.Trim(), out var captchaValue) || captchaValue != (CaptchaA + CaptchaB))
            {
                ErrorMessage = "Captcha niepoprawne. Srubuj ponownie";
                Console.WriteLine($"Captcha failed: entered='{Model.CaptchaAnswer ?? "(null)"}' expected='{CaptchaA + CaptchaB}'");
                return;
            }


            if (string.IsNullOrWhiteSpace(Model.UserName) || string.IsNullOrWhiteSpace(Model.Password) || string.IsNullOrWhiteSpace(Model.Password2) || string.IsNullOrWhiteSpace(Model.eMail))
            {
                Console.WriteLine("One or more required fields are empty");
                return;
            }

            if (Model.Password != Model.Password2)
            {
                Console.WriteLine("Passwords do not match");
                return;
            }

            // ensure dbContext is available
            if (dbContext is null)
            {
                Console.WriteLine("Database context is not available");
                return;
            }

            UserAccount? newUser = null;

            newUser = new UserAccount
            {
                userName = Model.UserName,
                // userPassword will be set to hashed value below
                userEmail = Model.eMail,
                surname = Model.SurName,
                userRole = "User"
            };

            // hash password before saving
            var hasher = new PasswordHasher<UserAccount>();
            newUser.userPassword = hasher.HashPassword(newUser, Model.Password);

            dbContext.users.Add(newUser);
            await dbContext.SaveChangesAsync();

            // try to send a dummy verification email; failures are non-fatal
            _ = SendVerificationEmailAsync(newUser.userEmail, newUser.userName);
        }
        catch (Exception ex)
        {
            ErrorMessage = "Database error: " + ex.Message;
            Console.WriteLine(ex.ToString());
        }
        finally
        {
            GenerateCaptcha();
            StateHasChanged();
        }

        // stay on the page and show success message (no automatic navigation)
        // client can be redirected later if desired
    }

    private async Task SendVerificationEmailAsync(string to, string userName)
    {
        try
        {
            emailService.To = to;
            emailService.Subject = "[Dummy] Verify your account";
            // fetch the just-saved user from the database to include identifying data in the token
            var user = await dbContext.users.Where(u => (u.userName == userName) && (u.userEmail == to)).FirstOrDefaultAsync();
            if (user is null)
            {
                VerificationEmailStatus = "Verification email could not be created: user not found.";
                await InvokeAsync(StateHasChanged);
                return;
            }

            // build a verification link (URL-encode the token)
            var encoded = user.GetProtectedHash();
            var baseUri = navigationManager.BaseUri?.TrimEnd('/') ?? string.Empty;
            var verificationLink = $"{baseUri}/validatemail?token={encoded}";

            emailService.Body = $"Hello {user.userName},\n\nThank you for registering.\nPlease click the link below to verify your email address:\n{verificationLink}\n\n-- Konfucjusz";

            // send the email (may fail in dev if no SMTP server)
            // EmailRequest.SendEmail may be synchronous; run it off the sync context to avoid blocking.
            await Task.Run(() => emailService.SendEmail());

            VerificationEmailStatus = $"Link weryfikujący adres e-Mail zostal wyslany na twoją skrzynkę.\n\nOtwórz go i kliknij, aby potwierdzic adres.";
        }
        catch (Exception ex)
        {
            VerificationEmailStatus = "Verification email could not be sent (dummy).";
            Console.WriteLine(ex.ToString());
        }
        finally
        {
            await InvokeAsync(StateHasChanged);
        }

    }
}