        }
    }

    private async Task RemoveParticipantAsync(int participantId)
    {
        try
        {
            var success = await ParticipantSvc.RemoveParticipantAsync(participantId);
            if (success)
            {
                StatusMessage = "Participant removed.";
                StatusCss = "alert-success";
