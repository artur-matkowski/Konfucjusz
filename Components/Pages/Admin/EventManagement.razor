@page "/eventManagement"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components
@attribute [Authorize(Roles = "Administrator")]
@inject ApplicationDbContext Db

<h3>Event Management</h3>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:60px">Id</th>
                <th style="width:160px">Created</th>
                <th>Title</th>
                <th>Description</th>
                <th style="width:150px">Enlist Start</th>
                <th style="width:150px">Enlist End</th>
                <th style="width:150px">Event Start</th>
                <th style="width:150px">Event End</th>
                <th style="width:100px">Searchable</th>
                <th style="width:110px">Anon Enlist</th>
                <th style="width:120px">Anon Stream</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Event item in Events)
            {
                <tr>
                    <td class="text-muted">@item.Id</td>
                    <td class="text-nowrap">@(item.CreationTimestamp.ToString("g"))</td>

                    @if (EditedIds.Contains(item.Id))
                    {
                        <td><input type="text" class="form-control form-control-sm" @bind="item.Title" /></td>
                        <td><textarea class="form-control form-control-sm" rows="2" @bind="item.Description"></textarea></td>
                        <td><input type="datetime-local" class="form-control form-control-sm" @bind="item.EnlistingStartDate" /></td>
                        <td><input type="datetime-local" class="form-control form-control-sm" @bind="item.EnlistingEndDate" /></td>
                        <td><input type="datetime-local" class="form-control form-control-sm" @bind="item.EventStartDate" /></td>
                        <td><input type="datetime-local" class="form-control form-control-sm" @bind="item.EventEndDate" /></td>
                        <td class="text-center"><input type="checkbox" @bind="item.Searchable" /></td>
                        <td class="text-center"><input type="checkbox" @bind="item.AllowedAnonymousEnlisting" /></td>
                        <td class="text-center"><input type="checkbox" @bind="item.AllowAnonymousStreaming" /></td>
                        <td>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-primary" @onclick="() => SaveAsync(item)">Save</button>
                                <button class="btn btn-sm btn-secondary" @onclick="() => CancelEdit(item.Id)">Cancel</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => PromptRemoveEvent(item.Id, item.Title)">Remove</button>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td>@item.Title</td>
                        <td style="max-width:240px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;" title="@item.Description">@item.Description</td>
                        <td class="text-nowrap">@(item.EnlistingStartDate.ToString("g"))</td>
                        <td class="text-nowrap">@(item.EnlistingEndDate.ToString("g"))</td>
                        <td class="text-nowrap">@(item.EventStartDate.ToString("g"))</td>
                        <td class="text-nowrap">@(item.EventEndDate.ToString("g"))</td>
                        <td>
                            @if (item.Searchable)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            @if (item.AllowedAnonymousEnlisting)
                            {
                                <span class="badge bg-info">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            @if (item.AllowAnonymousStreaming)
                            {
                                <span class="badge bg-info">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditedIds.Add(item.Id)">Edit</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => PromptRemoveEvent(item.Id, item.Title)">Remove</button>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <button class="btn btn-primary" @onclick="AddNewEventAsync">Add new event</button>
</div>

@if (showDeleteEventDialog && pendingEventForDeletion is not null)
{
    <div style="position:fixed;inset:0;background:rgba(0,0,0,0.45);z-index:1050;display:flex;align-items:center;justify-content:center;">
        <div class="card" style="width:560px;max-width:95%;">
            <div class="card-body">
                <h5 class="card-title">Confirm event deletion</h5>
                <p class="card-text mb-2">You're about to permanently delete this event. Review all details:</p>
                <table class="table table-sm mb-3">
                    <tbody class="small">
                        <tr><th scope="row" class="text-muted">Id</th><td>@pendingEventForDeletion.Id</td></tr>
                        <tr><th scope="row" class="text-muted">Created</th><td>@pendingEventForDeletion.CreationTimestamp.ToString("g")</td></tr>
                        <tr><th scope="row" class="text-muted">Title</th><td>@pendingEventForDeletion.Title</td></tr>
                        <tr><th scope="row" class="text-muted">Description</th><td>@pendingEventForDeletion.Description</td></tr>
                        <tr><th scope="row" class="text-muted">Event start</th><td>@pendingEventForDeletion.EventStartDate.ToString("g")</td></tr>
                        <tr><th scope="row" class="text-muted">Event end</th><td>@pendingEventForDeletion.EventEndDate.ToString("g")</td></tr>
                        <tr><th scope="row" class="text-muted">Enlisting start</th><td>@pendingEventForDeletion.EnlistingStartDate.ToString("g")</td></tr>
                        <tr><th scope="row" class="text-muted">Enlisting end</th><td>@pendingEventForDeletion.EnlistingEndDate.ToString("g")</td></tr>
                        <tr><th scope="row" class="text-muted">Searchable</th><td>@(pendingEventForDeletion.Searchable ? "Yes" : "No")</td></tr>
                        <tr><th scope="row" class="text-muted">Anon enlist</th><td>@(pendingEventForDeletion.AllowedAnonymousEnlisting ? "Yes" : "No")</td></tr>
                        <tr><th scope="row" class="text-muted">Anon streaming</th><td>@(pendingEventForDeletion.AllowAnonymousStreaming ? "Yes" : "No")</td></tr>
                    </tbody>
                </table>
                <div class="mb-2"><small class="text-muted">Type the title <code>@deleteEventExpectedText</code> to confirm deletion.</small></div>
                <input class="form-control mb-3" @bind="typedDeleteEventText" placeholder="Type title here" />
                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-secondary" @onclick="CancelDeleteEvent">Cancel</button>
                    <button class="btn btn-danger" disabled="@(typedDeleteEventText != deleteEventExpectedText)" @onclick="ConfirmDeleteEventAsync">Delete event</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<Event> Events { get; set; } = new();
    private List<int> EditedIds { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadEventsAsync();
    }

    private async Task LoadEventsAsync()
    {
        Events = await Db.events.OrderBy(e => e.Id).ToListAsync();
    }

    private async Task AddNewEventAsync()
    {
        try
        {
            var now = DateTime.UtcNow;
            var newEvent = new Event
            {
                Title = "New Event",
                Description = "Event description",
                EventStartDate = now.AddDays(7),
                EventEndDate = now.AddDays(7).AddHours(2),
                EnlistingStartDate = now,
                EnlistingEndDate = now.AddDays(6),
                AllowedAnonymousEnlisting = false,
                AllowAnonymousStreaming = false,
                Searchable = true
            };

            Db.events.Add(newEvent);
            await Db.SaveChangesAsync();
            await LoadEventsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
    }

    private async Task SaveAsync(Event evt)
    {
        try
        {
            Db.events.Update(evt);
            await Db.SaveChangesAsync();
            EditedIds.RemoveAll(x => x == evt.Id);
            await LoadEventsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
    }

    private void CancelEdit(int id)
    {
        EditedIds.RemoveAll(x => x == id);
        // Reload to discard changes
        _ = LoadEventsAsync();
    }

    private async Task RemoveAsync(int id)
    {
        try
        {
            var evt = await Db.events.FindAsync(id);
            if (evt != null)
            {
                Db.events.Remove(evt);
                await Db.SaveChangesAsync();
                await LoadEventsAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex);
        }
    }

    // typed-confirmation flow for events
    private bool showDeleteEventDialog = false;
    private string? deleteEventExpectedText;
    private int? deleteEventPendingId;
    private string typedDeleteEventText = string.Empty;

    private void PromptRemoveEvent(int id, string title)
    {
        deleteEventPendingId = id;
        pendingEventForDeletion = Events.FirstOrDefault(e => e.Id == id);
        deleteEventExpectedText = title ?? string.Empty;
        typedDeleteEventText = string.Empty;
        showDeleteEventDialog = true;
    }

    private void CancelDeleteEvent()
    {
        showDeleteEventDialog = false;
        deleteEventPendingId = null;
        deleteEventExpectedText = null;
        typedDeleteEventText = string.Empty;
        pendingEventForDeletion = null;
    }

    private async Task ConfirmDeleteEventAsync()
    {
        try
        {
            if (deleteEventPendingId.HasValue && !string.IsNullOrEmpty(deleteEventExpectedText) && typedDeleteEventText == deleteEventExpectedText)
            {
                var evt = await Db.events.FindAsync(deleteEventPendingId.Value);
                if (evt != null)
                {
                    Db.events.Remove(evt);
                    await Db.SaveChangesAsync();
                    await LoadEventsAsync();
                }
            }
        }
        finally
        {
            CancelDeleteEvent();
        }
    }

    private Event? pendingEventForDeletion;
}
