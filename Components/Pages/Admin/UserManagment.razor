@page "/userMenegment"
@rendermode InteractiveServer
@inherits OwningComponentBase<UserService>
@using Microsoft.AspNetCore.Authorization
@using Konfucjusz.Components.Shared
@attribute [Authorize(Roles = "Administrator")]


<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:60px">Id</th>
                <th style="width:160px">Created</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th style="width:120px">Validated</th>
                <th style="width:140px">Admin approved</th>
                <th>Roles</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserAccount item in sc)
            {
                <tr>
                    <td class="text-muted">@item.Id</td>
                    <td class="text-nowrap">@(item.creationTimestamp.ToString("g") ?? "-")</td>

                    @if (EditedIds.Contains(item.Id))
                    {
                        <td><InputText @bind-Value="item.userName" class="form-control form-control-sm" /></td>
                        <td><InputText @bind-Value="item.surname" class="form-control form-control-sm" /></td>
                        <td><InputText @bind-Value="item.userEmail" class="form-control form-control-sm" /></td>
                        <td>
                            <InputCheckbox @bind-Value="item.mailValidated" />
                        </td>
                        <td>
                            <InputCheckbox @bind-Value="item.userCreationConfirmedByAdmin" />
                        </td>
                        <td><InputText @bind-Value="item.userRole" class="form-control form-control-sm" /></td>
                        <td>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-primary" @onclick="() => Save(item)">Save</button>
                                <button class="btn btn-sm btn-secondary" @onclick="() => CancelEdit(item.Id)">Cancel</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => PromptRemoveUser(item.userEmail)">Remove</button>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td>@item.userName</td>
                        <td>@item.surname</td>
                        <td>@item.userEmail</td>
                        <td>
                            @if (item.mailValidated)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                        <td>
                            @if (item.userCreationConfirmedByAdmin)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                        <td>@item.userRole</td>
                        <td>
                            <div class="d-flex gap-2">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditedIds.Add(item.Id)">Edit</button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => PromptRemoveUser(item.userEmail)">Remove</button>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <button class="btn btn-primary" @onclick="AddNewUser">Add new user</button>
</div>

@if (showDeleteUserDialog && pendingUserForDeletion is not null)
{
    <div style="position:fixed;inset:0;background:rgba(0,0,0,0.45);z-index:1050;display:flex;align-items:center;justify-content:center;">
        <div class="card" style="width:560px;max-width:95%;">
            <div class="card-body">
                <h5 class="card-title">Confirm user deletion</h5>
                <p class="card-text mb-2">You're about to permanently delete this user. Review the details carefully.</p>
                <table class="table table-sm mb-3">
                    <tbody class="small">
                        <tr><th scope="row" class="text-muted">Id</th><td>@pendingUserForDeletion.Id</td></tr>
                        <tr><th scope="row" class="text-muted">Created</th><td>@(pendingUserForDeletion.creationTimestamp.ToString("g") ?? "-")</td></tr>
                        <tr><th scope="row" class="text-muted">Name</th><td>@pendingUserForDeletion.userName</td></tr>
                        <tr><th scope="row" class="text-muted">Surname</th><td>@pendingUserForDeletion.surname</td></tr>
                        <tr><th scope="row" class="text-muted">Email</th><td>@pendingUserForDeletion.userEmail</td></tr>
                        <tr><th scope="row" class="text-muted">Role(s)</th><td>@pendingUserForDeletion.userRole</td></tr>
                        <tr><th scope="row" class="text-muted">Mail validated</th><td>@(pendingUserForDeletion.mailValidated ? "Yes" : "No")</td></tr>
                        <tr><th scope="row" class="text-muted">Admin approved</th><td>@(pendingUserForDeletion.userCreationConfirmedByAdmin ? "Yes" : "No")</td></tr>
                    </tbody>
                </table>
                <div class="mb-2"><small class="text-muted">Type the email <code>@deleteUserExpectedText</code> to confirm deletion.</small></div>
                <input class="form-control mb-3" @bind="typedDeleteUserText" placeholder="Type email here" />
                <div class="d-flex justify-content-end gap-2">
                    <button class="btn btn-secondary" @onclick="CancelDeleteUser">Cancel</button>
                    <button class="btn btn-danger" disabled="@(typedDeleteUserText != deleteUserExpectedText)" @onclick="ConfirmDeleteUser">Delete user</button>
                </div>
            </div>
        </div>
    </div>
}

@code{
    public System.Collections.Generic.IList<UserAccount> sc = default!;
    private List<int> EditedIds = new List<int>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        sc = Service.GetUsers();
    }

    private void AddNewUser()
    {
        try {
            Service.Add(new UserAccount {
                userName = "newuser",
                surname = "newuser",
                userEmail = "newuser@example.com",
                userPassword = "newuser",
                userRole = "User",
                mailValidated = false,
                userCreationConfirmedByAdmin = false
                //,creationTimestamp = DateTime.Now //this produces an exception. Should be fixed, normally psql autocompletes it with now()
             });
            sc = Service.GetUsers();
        } catch (Exception ex) {
            Console.WriteLine(ex); // or render ex.Message in the page
        }
    }

    private void Edit(UserAccount user)
    {
        Service.Update(user);
        sc = Service.GetUsers();
    }

    private void Save(UserAccount user)
    {
        // commit edits for the row and exit edit mode
        Service.Update(user);
        EditedIds.RemoveAll(x => x == user.Id);
        sc = Service.GetUsers();
    }

    private void CancelEdit(int id)
    {
        // discard changes by reloading from DB and leaving edit mode
        EditedIds.RemoveAll(x => x == id);
        sc = Service.GetUsers();
    }

    private void Remove(string? id)
    {
        Service.Remove(id);
        sc = Service.GetUsers();
    }

    // typed-confirmation flow
    private bool showDeleteUserDialog = false;
    private string? deleteUserExpectedText;
    private string? deleteUserMailPending;
    private string typedDeleteUserText = string.Empty;

    private void PromptRemoveUser(string? userEmail)
    {
        if (string.IsNullOrEmpty(userEmail)) return;
        deleteUserMailPending = userEmail;
        pendingUserForDeletion = sc.FirstOrDefault(u => u.userEmail == userEmail);
        deleteUserExpectedText = userEmail; // require exact email
        typedDeleteUserText = string.Empty;
        showDeleteUserDialog = true;
    }

    private void CancelDeleteUser()
    {
        showDeleteUserDialog = false;
        deleteUserMailPending = null;
        deleteUserExpectedText = null;
        pendingUserForDeletion = null;
        typedDeleteUserText = string.Empty;
    }

    private void ConfirmDeleteUser()
    {
        try
        {
            if (!string.IsNullOrEmpty(deleteUserExpectedText) && typedDeleteUserText == deleteUserExpectedText)
            {
                Service.Remove(deleteUserMailPending);
                sc = Service.GetUsers();
            }
        }
        finally
        {
            // always clear dialog state
            typedDeleteUserText = string.Empty;
            CancelDeleteUser();
        }
    }

    private UserAccount? pendingUserForDeletion;
}