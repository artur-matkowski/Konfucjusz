@page "/userMenegment"
@rendermode InteractiveServer
@inherits OwningComponentBase<UserService>
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrator")]


<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:60px">Id</th>
                <th style="width:160px">Created</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Email</th>
                <th style="width:120px">Validated</th>
                <th style="width:140px">Admin approved</th>
                <th>Roles</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (UserAccount item in sc)
            {
                <tr>
                    <td class="text-muted">@item.Id</td>
                    <td>@(item.creationTimestamp.ToString() ?? "-")</td>
                    <td>@item.userName</td>
                    <td>@item.surname</td>
                    <td>@item.userEmail</td>
                    <td>
                        @if (item.mailValidated)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </td>
                    <td>
                        @if (item.userCreationConfirmedByAdmin)
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                    <td>@item.userRole</td>
                    <td>
                        <div class="d-flex gap-2">
                            @if(EditedIds.Contains(item.Id))
                            {
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => {EditedIds.RemoveAll(x => x == item.Id); Edit(item);}">Save</button>                            
                            }
                            else
                            {
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => EditedIds.Add(item.Id)">Edit</button>
                            }
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => Remove(item.userEmail)">Remove</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-3">
    <button class="btn btn-primary" @onclick="AddNewUser">Add new user</button>
</div>

@code{
    public System.Collections.Generic.IList<UserAccount> sc = default!;
    private List<int> EditedIds = new List<int>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        sc = Service.GetUsers();
    }

    private void AddNewUser()
    {
        try {
            Service.Add(new UserAccount {
                userName = "newuser",
                surname = "newuser",
                userEmail = "newuser@example.com",
                userPassword = "newuser",
                userRole = "User",
                mailValidated = false,
                userCreationConfirmedByAdmin = false
                //,creationTimestamp = DateTime.Now //this produces an exception. Should be fixed, normally psql autocompletes it with now()
             });
            sc = Service.GetUsers();
        } catch (Exception ex) {
            Console.WriteLine(ex); // or render ex.Message in the page
        }
    }

    private void Edit(UserAccount user)
    {
        Service.Update(user);
        sc = Service.GetUsers();
    }

    private void Remove(string? id)
    {
        Service.Remove(id);
        sc = Service.GetUsers();
    }
}